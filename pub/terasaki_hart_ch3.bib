@article{Guan2015, 
year = {2015}, 
title = {{Photosynthetic seasonality of global tropical forests constrained by hydroclimate}}, 
author = {Guan, Kaiyu and Pan, Ming and Li, Haibin and Wolf, Adam and Wu, Jin and Medvigy, David and Caylor, Kelly K. and Sheffield, Justin and Wood, Eric F. and Malhi, Yadvinder and Liang, Miaoling and Kimball, John S. and Saleska, Scott R. and Berry, Joe and Joiner, Joanna and Lyapustin, Alexei I.}, 
