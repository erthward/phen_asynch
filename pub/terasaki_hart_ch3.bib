@article{Miller2021, 
year = {2021}, 
title = {{Demographic consequences of foraging ecology explain genetic diversification in Neotropical bird species}}, 
author = {Miller, Matthew J. and Bermingham, Eldredge and Turner, Benjamin L. and Touchon, Justin C. and Johnson, Andrew B. and Winker, Kevin}, 
journal = {Ecology Letters}, 
