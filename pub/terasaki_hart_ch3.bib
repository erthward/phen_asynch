@article{Maglianesi2020, 
year = {2020}, 
title = {{High levels of phenological asynchrony between specialized pollinators and plants with short flowering phases}}, 
author = {Maglianesi, María A. and Hanson, Paul and Brenes, Emanuel and Benadi, Gita and Schleuning, Matthias and Dalsgaard, Bo}, 
